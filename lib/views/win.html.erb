  <body>

    <div class="container">
      <div class="row">
        <div class="col-sm-4 col-md-4 col-lg-4"></div>
        <div class="col-sm-4 col-md-4 col-lg-4 text-center">
        <h3>You win!</h3>
          <form method="post" action="/save_score">
            <input class="form-control text-center" name="user_name" type="text" pattern='[A-Za-z0-9]{1,8}' placeholder="Enter your name" autofocus required>
            <button type="submit" class="btn btn-success btn-block">enter</button>
          </form>
          <form method="post" action="/start_game">
            <button type="submit" class="btn btn-danger btn-block">restart</button>
          </form>
        </div>
        <div class="col-sm-4 col-md-4 col-lg-4"></div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-sm-4 col-md-4 col-lg-4"></div>
        <div class="col-sm-4 col-md-4 col-lg-4">
          <h5></h5>
          <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item" src="//www.youtube.com/embed/04854XqcfCY?rel=0"></iframe>
          </div>
        </div>
        <div class="col-sm-4 col-md-4 col-lg-4"></div>
      </div>
    </div>


